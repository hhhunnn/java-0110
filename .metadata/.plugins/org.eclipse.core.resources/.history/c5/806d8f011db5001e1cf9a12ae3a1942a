package e_Chapter04;

// 축구 선수 클래스 작성
// FootballPlayer 클래스 작성

// 클래스 필드
// : 선수 이름(name), 포지션(position), 팀 이름(team), 골 수(goals)

// 선수 정보를 출력하는 메서드
// : displayInpo() - 반환X
// : name, position, team, goals

class FootballPlayer {
	String name;
	String position;
	String team;
	int goals;
	
	void Football() {
		System.out.println(name + position + team + goals);
	}
	// 생성자
	FootballPlayer(String name, String position, String team, int goals){
		this.name = name;
		this.position = position;
		this.team = team;
		this.goals = goals;
	}
}
public class Object06 {

	public static void main(String[] args) {
		
		FootballPlayer player = new FootballPlayer("hyeonmin", "shoot", "korea", 10);
		player.Football();

	}

}
